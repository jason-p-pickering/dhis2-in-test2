
## Macro for generating the jQuery validation rules 
#macro( validate $type $require )
  #if( $type == "NUMBER" )
  	{validate:{ number:true #if($require), required:true #end }}
  #elseif( $require )
  	{validate:{required:true}}
  #end
#end

<script>
    jQuery(document).ready( function(){

        currentDiv = 'catalogForm';
        isSubmit = true;
        
        jQuery("#catalogForm").validate({
                 meta:"validate"
                ,errorElement:"span"
                ,submitHandler: function(form)
                    {
                        if( isSubmit ) 
                        {
                            addCatalog();
                        }
                    }
            });
    }); 
    
</script>

<script type="text/javascript">
	checkValueIsExist( "name", "validateCatalog.action");
</script>

<form id="catalogForm" name="catalogForm" method="post" >
<input type="hidden" id="catalogType" name="catalogType" value="$catalogType.id" />
<input type="hidden" id="catalogTypeName" name="catalogTypeName" value="$catalogType.name" />		

<!-- Catalog Details with Group Wise-->	
#if( $catalogTypeAttributeGroups.size() > 0 )
<table width="100%">
	<tr>
        <td width="50%"><label>$i18n.getString( "name" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
        <td width="50%"><input type="text" id="name" name="name" class="{validate:{required:true, rangelength:[4,160]}}"/></td>
    </tr>
    <tr>
        <td width="50%"><label>$i18n.getString( "description" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
        <td width="50%"><input type="text" id="description" name="description" class="{validate:{required:true, minlength:4}}"/></td>
    </tr>
	#foreach( $catalogTypeAttributeGroup in $catalogTypeAttributeGroups )
	<tr bgcolor="#285C91">
		<td colspan="2"><font color="#FFFFFF"><strong>$encoder.htmlEncode( $catalogTypeAttributeGroup.name )</strong></font></td>
	</tr>
	
	<!-- CatalogType Attributes  -->
	#set( $mark = false )
		#foreach($attribute in $catalogTypeAttributeGroup.getCatalogTypeAttributes() )
			<tr #alternate($mark)>
				<td width="50%"><label>$attribute.name #if($attribute.mandatory)<em title="$i18n.getString( 'required' )" class="required">*</em> #end</label></td>
				<td width="50%">
					#if( $attribute.valueType == "YES/NO" )
						<select id="attr$attribute.id"  name="attr$attribute.id" > 
							<option value="" >[$i18n.getString( "please_select" )]</option>             
							<option value="Yes">$i18n.getString( "yes" )</option>
							<option value="No" >$i18n.getString( "no" )</option>
						</select>                
					#elseif( $attribute.valueType == "DATE" )
							<input type="text" id="attr$attribute.id" name="attr$attribute.id" class='#validate( "default"  $attribute.mandatory )' />
							<script type="text/javascript">
							   datePickerValid( 'attr$attribute.id' );
							</script>                    
					#elseif( $attribute.valueType == "COMBO" )
						<select  id="attr$attribute.id" name="attr$attribute.id" class='#validate( "default"  $attribute.mandatory )'>
							<!--Collections.sort($attribute.attributeOptions))-->
							##set ( $options = $sorter.sort($attribute.attributeOptions))
							<option value="">[$i18n.getString( "please_select" )]</option>
							#foreach ($option in $!catalogTypeAttributesOptionsMap.get( $attribute.id ) )
								<option value="$option.id" >$option.name</option>
							#end						
						</select>
					#else 
						<input type="text" id="attr$attribute.id" name="attr$attribute.id" class="{validate:{required:$attribute.mandatory #if($!attribute.noChars),maxlength:$attribute.noChars #end #if($attribute.valueType=='NUMBER'),number:true #end }}" />
					#end
				</td>
			</tr>
	#set( $mark = !$mark)
		#end
	#end
	
</table>	
	
<!-- Catalog Details without Group Details-->	
#else
<table width="100%">
	<tr>
        <td width="50%"><label>$i18n.getString( "name" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
        <td width="50%"><input type="text" id="name" name="name" class="{validate:{required:true, rangelength:[4,160]}}"/></td>
    </tr>
    <tr>
        <td width="50%"><label>$i18n.getString( "description" ) <em title="$i18n.getString( 'required' )" class="required">*</em></label></td>
        <td width="50%"><input type="text" id="description" name="description" class="{validate:{required:true, minlength:4}}"/></td>
    </tr>

#if ( $catalogTypeAttributes.size() > 0)
	#foreach($attribute in $catalogTypeAttributes )
		<tr>
			<td width="50%"><label>$attribute.name #if($attribute.mandatory)<em title="$i18n.getString( 'required' )" class="required">*</em> #end</label></td>
			<td width="50%">
				#if( $attribute.valueType == "YES/NO" )
					<select id="attr$attribute.id"  name="attr$attribute.id" > 
						<option value="" >[$i18n.getString( "please_select" )]</option>             
						<option value="true">$i18n.getString( "yes" )</option>
						<option value="false" >$i18n.getString( "no" )</option>
					</select>                
				#elseif( $attribute.valueType == "DATE" )
						<input type="text" id="attr$attribute.id" name="attr$attribute.id" class='#validate( "default"  $attribute.mandatory )' />
						<script type="text/javascript">
						   datePickerValid( 'attr$attribute.id' );
						</script>                    
				#elseif( $attribute.valueType == "COMBO" )
					<select  id="attr$attribute.id" name="attr$attribute.id" class='#validate( "default"  $attribute.mandatory )'>
						<!--Collections.sort($attribute.attributeOptions))-->
						##set ( $options = $sorter.sort($attribute.attributeOptions))
						<option value="">[$i18n.getString( "please_select" )]</option>
						#foreach ($option in $!catalogTypeAttributesOptionsMap.get( $attribute.id ) )
							<option value="$option.id" >$option.name</option>
						#end						
					</select>
				#else 
					<input type="text" id="attr$attribute.id" name="attr$attribute.id" class="{validate:{required:$attribute.mandatory #if($!attribute.noChars),maxlength:$attribute.noChars #end #if($attribute.valueType=='NUMBER'),number:true #end }}" />
				#end
			</td>		
		</tr>
	#end	
#end
	
</table>	
	
#end

	<p align="right">
		<input type="button"  value="$i18n.getString( 'Cancel' )" style="width:100px" onclick="closeAddCatalogWindow();"/>&nbsp;&nbsp;
		&nbsp;&nbsp;<input type="submit"  id="saveButton" name="saveButton" value="$i18n.getString( 'save' )"  style="width:100px"/>
	</p>


</form>