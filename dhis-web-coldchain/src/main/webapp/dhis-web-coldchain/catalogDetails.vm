<!-- Catalog Details with Group Wise-->	
#if( $catalogTypeAttributeGroups.size() > 0 )
<table width="100%">
	<tr>
		<td class='text-column' width="50%"><label>$i18n.getString('name')</label></td>
		<td class="text-column" width="50%">$catalog.name</td>
	</tr>
	<tr>
		<td class='text-column' width="50%"><label>$i18n.getString('description')</label></td>
		<td class="text-column" width="50%">$catalog.description</td>
	</tr>	
	#foreach( $catalogTypeAttributeGroup in $catalogTypeAttributeGroups )
		<tr bgcolor="#285C91">
			<td colspan="2"><font color="#FFFFFF"><strong>$encoder.htmlEncode( $catalogTypeAttributeGroup.name )</strong></font></td>
				<!--<td><font color="#FFFFFF"><strong>Value</strong></font></td>-->
		</tr>
        <!-- CatalogType Attributes  -->
        #set( $mark = false )
       	#foreach( $catalogAttribute in $catalogTypeAttributeGroup.getCatalogTypeAttributes() )
        #set( $catalogAttributeValue = "" )
        #set( $catalogAttributeValue = $!catalogTypeAttributeValueMap.get( $catalogAttribute.id ) )
        	<tr #alternate($mark)>
            	<td class='text-column'><label>$catalogAttribute.name</label></td>
                <td class="text-column">$!catalogAttributeValue</td>
            </tr>
       	#set( $mark = !$mark)
        #end
	#end
</table>

<!-- Catalog Details without Group Details-->
#else
    <table width="100%">
		<tr>
			<td class='text-column' width="50%"><label>$i18n.getString('name')</label></td>
			<td class="text-column" width="50%">$catalog.name</td>
		</tr>
		<tr>
			<td class='text-column' width="50%"><label>$i18n.getString('description')</label></td>
			<td class="text-column" width="50%">$catalog.description</td>
		</tr>    	
        <!-- CatalogType Attributes  -->
        #set( $mark = false )
        #foreach( $catalogAttribute in $catalogTypeAttributes )
            #set( $catalogAttributeValue = "" )
            #set( $catalogAttributeValue = $!catalogTypeAttributeValueMap.get( $catalogAttribute.id ) )
            <tr #alternate($mark)>
                <td class='text-column'><label>$catalogAttribute.name</label></td>
                <td class="text-column">$!catalogAttributeValue</td>
            </tr>
        #set( $mark = !$mark)
        #end
    </table>
#end

